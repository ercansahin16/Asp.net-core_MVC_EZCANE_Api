@model List<IzmirModel>
@{
    ViewData["Title"] = "Izmir";
}

<h3>İzmir Nöbetçi Eczaneler</h3>
<table class="table table-striped table-bordered  table-hover ">
    <thead>
        <tr>
            <th scope="col">SıraNo</th>
            <th scope="col">Eczane Adi</th>
            <th scope="col">Tarih</th>
            <th scope="col">İletişim</th>
            <th scope="col">Adres</th>
            <th scope="col">Bölge</th>
            <th scope="col">Aciklama</th>
        
        </tr>
    </thead>
    @{
        var sayac = 0;
    }
    @foreach (var item in Model)
    {
        sayac++;

        <tr>
            <th scope="row">@sayac</th>
            <th>@item.Adi</th>
            @* <th>@item.Tarih</th> *@
            <th>@Convert.ToDateTime(item.Tarih).ToString("dd/MM/yyyy")</th>
            <td>@item.Telefon</td>
            <td>@item.Adres</td>
            <td>@item.Bolge</td>
            <td>@item.BolgeAciklama</td>
          
        </tr>
    }
    <h6 class="mb-4 mt-4" style="float:right">Görüntülenen Veri Sayısı : @sayac</h6>
</table>