@model List<KayseriModel>
@{
    ViewData["Title"] = "Kayseri";
}


<h3>Kayseri Nöbetçi Eczaneler</h3>

<table class="table table-striped table-bordered  table-hover ">
    <thead>
        <tr>
            <th scope="col">SıraNo</th>
            <th scope="col">Eczane Adi</th>
            <th scope="col">Tarih</th>
            <th scope="col">İletişim</th>
            <th scope="col">Adres</th>
        </tr>
    </thead>
    @{
        var sayac = 0;
    }
    @foreach (var item in Model)
    {
        sayac++;

        <tr>
            <th scope="row">@sayac</th>
            <th>@item.name</th>
            <th>@item.watchDate</th>
            <td>@item.phone</td>
            <td>@item.address</td>
      
        </tr>
    }
    <h6 class="mb-4 mt-4" style="float:right">Görüntülenen Veri Sayısı : @sayac</h6>
</table>